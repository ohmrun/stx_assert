{
  "build" : {
    "-D"    : "no-deprecation-warnings",
    "-cp"   : ["src/main/haxe","./"],
    "-lib"  : ["tink_core","stx_pico","stx_nano","stx_log","stx_fn","stx_test"],
    "unit" : {
      "--macro" : [
        "include('stx.Assert',true)",
        "include('stx.assert',true)"
      ],
      "interp" : {
        "--interp" : true
      }
    },
    "main" : {
      "--main"      : "Main",
      "interp" : {
